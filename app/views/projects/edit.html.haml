.container
  = form_for @project do |f|
    .bs-docs-section
      .row
        .col-lg-12
          .page-header
            %h1#forms 新規プロジェクトの作成
      .row
        .col-lg-7
          .well.bs-component
            %form.form-horizontal
              %fieldset
                .form-group
                  .col-lg-2.control-label
                    = f.label :project_name, 'プロジェクト名'
                  .col-lg-10
                    = f.text_field :project_name, autofocus: true
                .form-group
                  .col-lg-2.control-label
                    = f.label :activity, '内容'
                  .col-lg-10#textArea
                    = f.text_area :activity, class: 'form-control', rows: 3
                .form-group
                  .col-lg-2.control-label
                    = f.label :goal, 'ゴール'
                  .col-lg-10#textArea
                    = f.text_area :goal, class: 'form-control', rows: 3
                .form-group
                  .col-lg-2.control-label
                    = f.label :start, 'start'
                  .col-lg-10
                    = f.text_field :start
                .form-group
                  .col-lg-2.control-label
                    = f.label :finish, 'finish'
                  .col-lg-10
                    = f.text_field :project_name, autofocus: true
                .form-group
                  %label.col-lg-2.control-label{:for => "select"} Selects
                  .col-lg-10
                    %select#select.form-control
                      %option 1
                      %option 2
                      %option 3
                      %option 4
                      %option 5
                    %br/
                    %select.form-control{:multiple => "multiple"}
                      %option 1
                      %option 2
                      %option 3
                      %option 4
                      %option 5
                .form-group
                  .col-lg-10.col-lg-offset-2
                    %button.btn.btn-default{:type => "reset"} Cancel
                    %button.btn.btn-primary{:type => "submit"} Submit
