.container
  .row
    .col-lg-12
      .bs-docs-section
        .row
          .col-lg-6
            %h2.line#nav-tabs メンバー情報
            .bs-component
              %ul.nav.nav-tabs
                %li.active
                  %a.btn.wide.btn-info{"data-toggle" => "tab", :href => "#all"} 全体
                %li
                  %a.btn.wide.btn-danger{"data-toggle" => "tab", :href => "#kanto"} 関東
                %li
                  %a.btn.wide.btn-warning{"data-toggle" => "tab", :href => "#kansai"} 関西
                %li
                  %a.btn.wide.btn-success{"data-toggle" => "tab", :href => "#kyushu"} 九州
                %li
                  = link_to 'CSV出力', csv_output_users_path(format: :csv), class: 'btn wide btn-primary'
  .tab-content
    #all.tab-pane.fade.active.in
      %h4.admin-label 関東
      %table.table.table-striped.table-hover
        %thead
          %tr
            %th 学年
            %th 名前
            %th 大学名
            %th 活動拠点
            %th 専門班
            %th 今やっていること
            %th 詳細
        %tbody
        - @kanto_users.each do |kanto_user|
          -# %tr{ class: cycle('info', '') }
          -#   - kanto_user
          %tr.info
            %td= Settings.year[kanto_user.year]
            %td= kanto_user.name
            %td= kanto_user.university
            %td= Settings.location_name.kanto
            %td= Settings.edupedia_team[kanto_user.team_main]
            %td= kanto_user.doing
            %td
              = link_to '個人ページへ', user_path(kanto_user.id), class: 'btn small btn-primary'
