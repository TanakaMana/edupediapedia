.container
  .row
    .col-lg-12
      .bs-docs-section
        .row
          .col-lg-6
            %h2#nav-tabs Tabs
            .bs-component
              %ul.nav.nav-tabs
                %li.active
                  %a.btn.wide.btn-info{"data-toggle" => "tab", :href => "#all"} 全体
                %li
                  %a.btn.wide.btn-danger{"data-toggle" => "tab", :href => "#kanto"} 関東
                %li
                  %a.btn.wide.btn-warning{"data-toggle" => "tab", :href => "#kansai"} 関西
                %li
