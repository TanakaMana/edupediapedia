.navbar.navbar-default.navbar-fixed-top
  .navbar-header
    %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand(href="/")
      = image_tag("edu_logo.png", alt: "EDUPEDIAPEDIA")
    .navbar-collapse.collapse.navbar-responsive-collapse
      //login
  -if user_signed_in?
    %ul.nav.navbar-nav.navbar-right
      %li.dropdown
        %a.dropdown-toggle.btn.btn-head.navbar-btn{ "aria-expanded" => "false", "data-toggle" => "dropdown", href: "#", role: "button" }
          = "#{ current_user.name } のメニュー"
          %span.caret
        %ul.dropdown-menu{ role: "menu" }
          %li
            = link_to '自分のページ', user_path(current_user)
          %li
            = link_to 'ページを編集', edit_user_registration_path(current_user)
          %li
            = link_to 'サインアウト', destroy_user_session_path, method: :delete
      //not login
  -else
    %ul.nav.navbar-nav.navbar-right
      %li
        .btn.btn-head.navbar-btn
          = link_to 'はじめる', new_user_session_path
.container
  .row
    .col-lg-12
      .page-header
